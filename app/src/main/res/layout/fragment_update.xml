<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:contentDescription="ScrollView">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutTaskUpdateTitle"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="30dp"
            app:boxStrokeColor="@color/darkgreen"
            app:hintTextColor="@color/darkgreen"
            app:startIconDrawable="@drawable/baseline_title_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextUpdateTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Başlık"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutTaskUpdateDescription"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="30dp"
            app:boxStrokeColor="@color/darkgreen"
            app:hintTextColor="@color/darkgreen"
            app:startIconDrawable="@drawable/baseline_comment_bank_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextUpdateDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Açıklama"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutTaskUpdateDate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="225dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="30dp"
            app:boxStrokeColor="@color/darkgreen"
            app:hintTextColor="@color/darkgreen"
            app:startIconDrawable="@drawable/baseline_edit_calendar_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextUpdateDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tarih"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutTaskUpdateTime"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="30dp"
            app:boxStrokeColor="@color/darkgreen"
            app:hintTextColor="@color/darkgreen"
            app:startIconDrawable="@drawable/baseline_access_time_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextUpdateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Saat"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="381dp"
            android:layout_marginEnd="155dp"
            android:text="Güncelle" />

    </RelativeLayout>
</ScrollView>